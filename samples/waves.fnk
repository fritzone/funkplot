set palette blues
set pixel size 4

# variable declarations
var a v i number
var ps list of points
var p point

# the function to plot   
function f(x) = sin(x) + a

# the actual code 
let a = 1

for v = 1 to 10 do
  let a = 0.5 + a
  let ps = points of f over (-v, v) counts 256
  for i = 0 to 255 do
    let p = ps[i]
    set color palette[i]
    plot p
  done
done

